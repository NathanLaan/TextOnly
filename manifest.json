{
    "name": "TextOnly",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Google Chrome Extension to remove images from web pages",
    "icons": {
        "16" : "image.png",
        "48" : "image.png",
        "128" : "image.png"
    },
    "permissions": [
        "tabs",
		"storage",
        "background",
        "notifications",
        "idle",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": "image.png", 
        "default_title": "TextOnly",
        "default_popup": "popup.html"
    },
	"background": {
		"scripts": ["jquery-1.6.1.min.js", "TextOnlySiteList.js", "background.js"]
	}
}